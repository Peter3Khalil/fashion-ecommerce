{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "prettier",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["prettier", "@typescript-eslint"],
  "rules": {
    "no-console": "off", // Turn off console warnings globally
    "no-var": "error",
    "no-unused-vars": "off", // Turn off unused vars globally
    "prefer-const": "error",
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["../*"],
            "message": "Please use absolute imports"
          }
        ]
      }
    ],
    "@typescript-eslint/no-unused-vars": "off", // Turn off TypeScript unused vars globally
    "@typescript-eslint/no-empty-object-type": "off"
  }
}
